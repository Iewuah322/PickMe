<Window x:Class="TaxiWPF.Views.TripChatView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Чат поездки" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen" MinWidth="800" MinHeight="500"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        FontFamily="Segoe UI"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Border Background="#F0EEE9" CornerRadius="10" BorderBrush="#8D837C" BorderThickness="1">
        <Grid>
            <Button Content="X" Click="CloseButton_Click" Style="{StaticResource CloseButton}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0" Panel.ZIndex="100"/>

            <Grid Margin="40">
                <Border Background="#FFFFFF"
                        Opacity="0.98"
                        CornerRadius="25"
                        BorderBrush="#E0E0E0"
                        BorderThickness="2">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="30" ShadowDepth="8" Opacity="0.25" Color="Black"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#F8F8F8" CornerRadius="25,25,0,0" Padding="25,18">
                            <StackPanel Orientation="Horizontal">
                                <Border Width="45" Height="45" CornerRadius="22.5" Background="#4CAF50" Margin="0,0,15,0">
                                    <TextBlock Text="Ч" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding ChatTitle}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#333333"/>
                                    <TextBlock Text="{Binding ChatSubTitle}"
                                               FontSize="13"
                                               Foreground="#888888"
                                               Margin="0,3,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      x:Name="MessagesScrollViewer"
                                      Padding="20,15"
                                      Background="#FAFAFA">
                            <ItemsControl ItemsSource="{Binding Messages}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,5">
                                            <Border MaxWidth="500" Padding="15,12">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="White"/>
                                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                                        <Setter Property="CornerRadius" Value="18,18,18,4"/>
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect ShadowDepth="2" Color="#E0E0E0" Opacity="0.5" BlurRadius="8"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsFromCurrentUser}" Value="True">
                                                                <Setter Property="Background" Value="#4CAF50"/>
                                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                                <Setter Property="CornerRadius" Value="18,18,4,18"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding MessageText}"
                                                               TextWrapping="Wrap"
                                                               FontSize="14"
                                                               Foreground="#333333"/>
                                                    <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm'}"
                                                               FontSize="11"
                                                               Foreground="#888888"
                                                               Margin="0,8,0,0"
                                                               HorizontalAlignment="Right"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <Border Grid.Row="2"
                                Background="#FFFFFF"
                                CornerRadius="0,0,25,25"
                                Padding="20,15"
                                BorderBrush="#E8E8E8"
                                BorderThickness="0,1,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        Background="#F5F5F5"
                                        CornerRadius="15"
                                        Padding="15,10">
                                    <TextBox Text="{Binding NewMessageText, UpdateSourceTrigger=PropertyChanged}"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             FontSize="14"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             MaxHeight="100"
                                             VerticalScrollBarVisibility="Auto"
                                             VerticalContentAlignment="Center"/>
                                </Border>

                                <Button Grid.Column="1"
                                        Command="{Binding SendMessageCommand}"
                                        Width="50"
                                        Height="50"
                                        Margin="15,0,0,0"
                                        Background="#4CAF50"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="25">
                                                            <TextBlock Text=">"
                                                                       FontSize="20"
                                                                       Foreground="White"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#3D9140"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
